datasource db {
	provider = "postgres"
	url 	 = env("DATABASE_URL")
}

generator client {
	provider = "prisma-client-js"
}

model Post {
	id			Int			@default(autoincrement()) @id
	title		String
	content		String?
	createdAt	DateTime	@default(now())
	updatedAt 	DateTime
	userId		Int
	user 		User 		@relation(fields: [userId], references: [id])
}

model User {
	email		String		@unique
	username	String		@unique
	password	String
	name		String?
	posts 		Post[]
}