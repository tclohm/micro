generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Profile {
  id            Int     @default(autoincrement()) @id
  bio           String?
  userId        Int     @default(dbgenerated()) @unique
  twitterHandle String?
  googleHandle  String?
  githubHandle  String?
  user          User    @relation(fields: [userId], references: [id])
}

model User {
  id       Int      @default(autoincrement()) @id
  name     String
  email    String   @unique
  username String   @unique
  password String?
  profile  Profile
}
