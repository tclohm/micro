{
	"name": "api",
	"version": "0.0.0",
	"private": true,
	"main": "index.js",
	"scripts": {
		"dev": "concurrently -k yarn:dev:*",
		"dev:accounts": "nodemon -r dotenv/config -r esm ./src/services/accounts/index.js",
		"dev:content": "nodemon -r dotenv/config -r esm ./src/services/content/index.js",
		"dev:profiles": "nodemon -r dotenv/config -r esm ./src/services/profiles/index.js",
		"dev:gateway": "wait-on tcp:4001 tcp:4002 tcp:4003 && nodemon -r dotenv/config -r esm ./src/index.js"
	},
	"dependencies": {
		"@apollo/federation": "0.20.6",
		"@apollo/gateway": "0.21.3",
		"@prisma/client": "^2.6.2",
		"apollo-datasource": "^0.7.2",
		"apollo-server": "^2.18.1",
		"apollo-server-express": "^2.17.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"esm": "^3.2.25",
		"express": "^4.17.1",
		"express-jwt": "^6.0.0",
		"graphql": "^15.3.0",
		"graphql-middleware": "^4.0.2",
		"graphql-request": "^3.3.0",
		"graphql-shield": "^7.3.6",
		"graphql-tools": "^6.2.2",
		"gravatar-url": "^3.1.0",
		"helmet": "^4.2.0",
		"jsonwebtoken": "^8.5.1",
		"jwt-decode": "^3.0.0",
		"mongoose": "^5.10.8",
		"nodemon": "^2.0.4",
		"rand-token": "^1.0.1",
		"validator": "^13.1.17",
		"wait-on": "^5.2.0",
		"yargs": "^16.1.0"
	},
	"devDependencies": {
		"@prisma/cli": "^2.6.2",
		"apollo-server-testing": "^2.19.0",
		"concurrently": "^5.3.0",
		"faker": "^5.1.0",
		"isomorphic-fetch": "^3.0.0",
		"jest": "^26.6.3"
	}
}
